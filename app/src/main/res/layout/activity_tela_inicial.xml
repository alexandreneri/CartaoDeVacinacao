<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaInicialActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/buttonSair"
        android:layout_width="103dp"
        android:layout_height="46dp"
        android:layout_marginStart="2dp"
        android:background="#f5095a"
        android:text="Sair"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonVacinas"
        android:layout_width="161dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Vacinas"
        app:layout_constraintBottom_toTopOf="@+id/buttonCartaoVacina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/buttonCartaoVacina"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="7dp"
        android:text="Cartao Vacina"
        app:layout_constraintBottom_toTopOf="@+id/buttonNoticias"
        app:layout_constraintEnd_toStartOf="@+id/buttonImc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonVacinas" />

    <Button
        android:id="@+id/buttonHospital"
        android:layout_width="173dp"
        android:layout_height="47dp"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:text="Hospital"
        app:layout_constraintBottom_toTopOf="@+id/buttonImc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonVacinas"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/buttonImc"
        android:layout_width="172dp"
        android:layout_height="49dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="32dp"
        android:text="Calculadora Imc"
        app:layout_constraintBottom_toTopOf="@+id/buttonNoticias"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonCartaoVacina" />

    <Button
        android:id="@+id/buttonNoticias"
        android:layout_width="220dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="164dp"
        android:text="Noticias"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="386dp"
        android:layout_height="280dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ze_gotinha_familia" />
</android.support.constraint.ConstraintLayout>